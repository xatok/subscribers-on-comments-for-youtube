{

  "description": "Shows the YouTube subscribers count of each user's comment.",
  "manifest_version": 2,
  "name": "Subscribers on comments for YouTubeâ„¢",
  "version": "1.1",
  "homepage_url": "https://github.com/xatok/subscribers-on-comments-for-youtube",
  "background": {
    "scripts": ["/js/background.js"]
  },

  "page_action": {
    "browser_style": true
  },

  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "*://*/*",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css" : ["/css/content-style.css"],
      "js": ["/js/content-script.js"]
    }
  ]

}
