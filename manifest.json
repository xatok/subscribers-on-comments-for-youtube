{

  "description": "Shows the YouTube subscribers count of each user's comment.",
  "manifest_version": 2,
  "name": "Subscribers on comments for YouTubeâ„¢",
  "version": "1.1",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/apply-css",

  "background": {
    "scripts": ["/js/background.js"]
  },

  "page_action": {
    "browser_style": true
  },

  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "tabs",
    "webNavigation",
    "*://www.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css" : ["/css/content-style.css"],
      "js": ["/js/content-script.js"]
    }
  ]

}
